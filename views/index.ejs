<div class="author">
  <h1 class="author-heading">H, I am Kadir</h1>
  <p class="author-body">Software Developer</p>
</div>

<img
  src="https://images.unsplash.com/photo-1683011149602-ac15c7c5b078?auto=format&fit=crop&w=900&q=80"
  alt="hero image"
  class="hero-image"
  width="800"
  height="500"
/>

<section class="articles">
  <h2 class="articles-heading">Latest Posts</h2>

  <ul class="article-ul">
    <% data.forEach(post => { %>

    <li>
      <a href="/post/<%= post._id %>">
        <span><%= post.title %></span>
        <span class="article-list-date">
          <%= post.createdAt.toDateString() %>
        </span>
      </a>
    </li>

    <% }) %>
  </ul>

  <% if (nextPage !== null) { %>
    <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
  <% } %>
</section>
